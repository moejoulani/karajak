<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:qwerjk="http://schemas.android.com/apk/res/com.qwerjk.better_text"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createNewUser"
    android:background="@drawable/fordi"
    >
   <TextView
       android:id="@+id/oo"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="انشاء حساب جديد"
       android:textSize="35dp"
       android:textColor="#ffffff"
       android:fontFamily="@font/din"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="45dp"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@id/oo"
        android:orientation="vertical"


        >

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/backgroundforinputsnewuser"
            android:hint="الاســــم"
            android:fontFamily="@font/din"
            android:inputType="text"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:textAlignment="center"
             />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/backgroundforinputsnewuser"
            android:hint="رقــم الــهــاتــف"
            android:inputType="phone"
            android:textAlignment="center"
            android:textColorHint="#ffffff"
            android:fontFamily="@font/din"
            android:textColor="#ffffff"
            />

        <Spinner
            android:id="@+id/spAD"
            style="@style/myspinnerStyle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="#94030303"
            android:fontFamily="@font/din"
            android:popupBackground="#D2000000"
            android:textAlignment="center"


            >

        </Spinner>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="توجه إلى إعدادات حسابك لاحقاً لإضافة موقعك بشكل دقيق"
            android:fontFamily="@font/din"
            android:layoutDirection="rtl"
            android:layout_gravity="center"
            android:textColor="#81FFFFFF"
            android:background="#94030303"
            android:layout_marginLeft="20dp"
            android:textSize="12dp"
            android:layout_marginRight="20dp"

            />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAlignment="center"
            android:background="@drawable/backgroundforinputsnewuser"
            android:hint=" كلمة الــســر"
            android:inputType="textPassword"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:fontFamily="@font/din"
            />

        <EditText
            android:id="@+id/repass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAlignment="center"
            android:background="@drawable/backgroundforinputsnewuser"
            android:hint="إعــادة كــلــمــة الــســر"
            android:inputType="textPassword"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:fontFamily="@font/din"
            />

    <Button
        android:id="@+id/createbtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:text="إنشاء الحساب"
        android:layout_gravity="center"
        android:fontFamily="@font/din"
        android:background="@drawable/pop"
        android:layout_marginTop="50dp"

        />


    </LinearLayout>

</RelativeLayout>