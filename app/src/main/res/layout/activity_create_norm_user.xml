<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createNormUser">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_setting"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FF0710"

        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_bar_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF0710">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <TextView
                    android:id="@+id/close_btnNN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اغلاق"
                    android:fontFamily="@font/din"
                    android:layout_alignParentStart="true"
                    android:textColor="#fff"
                    android:textSize="17sp"
                    />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="إنشاء حساب جديد"
                    android:fontFamily="@font/din"
                    android:layout_centerHorizontal="true"
                    android:textColor="#fff"
                    android:textSize="17sp"
                    />





            </RelativeLayout>



        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/app_bar_setting"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/username_text_input_layout8"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/NORname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:ems="10"
                android:hint="الاسم"

                android:gravity="center"
                android:layout_marginHorizontal="20dp"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/username_text_input_layout1"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/NORphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:inputType="numberDecimal"

                android:ems="10"
                android:hint="رقم الهاتف"

                android:gravity="center"
                android:layout_marginHorizontal="20dp"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/username_text_input_layout2"
            android:layout_width="match_parent"
            android:padding="10dp"

            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/NORpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="كلمة السر"

                android:fontFamily="@font/din"
                android:gravity="center"
                android:layout_marginHorizontal="20dp"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/username_text_input_layout4"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <EditText



                android:id="@+id/NORrepassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:inputType="textPassword"
                android:ems="10"
                android:hint="إعادة كلمة السر"

                android:fontFamily="@font/din"
                android:gravity="center"
                android:layout_marginHorizontal="20dp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/create_btn_NN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="إنشاء الحساب"
            android:textSize="18dp"
            android:layout_marginHorizontal="13dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/din"
            android:background="#FF0710"
            android:textColor="#fff"
            />
    </LinearLayout>
</RelativeLayout>