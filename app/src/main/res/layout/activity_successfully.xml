<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".successfully"
    android:background="#ffffff"
    >

    <ImageView
        android:id="@+id/top"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/kar"
        />
    <ImageView
        android:id="@+id/succicon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/success"
        android:layout_below="@id/top"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/succtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="#000"
        android:text="تم أضافة القطعة بنجاح"
        android:fontFamily="@font/din"
        android:layout_below="@+id/succicon"
        android:gravity="center"

        />
    <Button
        android:id="@+id/goback"
        android:layout_width="400dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/succtext"
        android:layout_marginTop="30dp"
        android:text="الرجوع الى القائمة الرئيسية "
        android:textSize="20dp"
        android:textColor="#000"
        android:fontFamily="@font/din"
        android:onClick="goback"

        />


</RelativeLayout>