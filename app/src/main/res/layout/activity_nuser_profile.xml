<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nuserProfile">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_baro"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#3F51B5"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >

                <TextView
                    android:id="@+id/close_NUprofile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اغلاق"
                    android:fontFamily="@font/din"
                    android:layout_alignParentStart="true"
                    android:textColor="#fff"
                    android:textSize="17sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="الصفحة الشخصية"

                    android:textColor="#fff"
                    android:textSize="17sp"
                    android:fontFamily="@font/din"
                    />


            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_baro"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textDirection="rtl"
            android:layoutDirection="rtl"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="الأسم : "
                android:layout_weight="1"

                android:fontFamily="@font/din"
                />
            <EditText
                android:id="@+id/nameENU"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_weight="2"
                android:focusable="false"
                android:fontFamily="@font/din"
                android:textAlignment="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textDirection="rtl"
            android:layoutDirection="rtl"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=" رقم الهاتف : "
                android:layout_weight="1"
                android:fontFamily="@font/din"
                />
            <EditText
                android:id="@+id/phoneENU"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="numberDecimal"
                android:fontFamily="@font/din"
                android:focusable="false"
                android:singleLine="true"
                android:textAlignment="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textDirection="rtl"
            android:layoutDirection="rtl"
            android:padding="5dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="كلمة السر : "
                android:layout_weight="1"
                android:fontFamily="@font/din"
                />
            <EditText
                android:id="@+id/passwordENU"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="textPassword"
                android:fontFamily="@font/din"
                android:focusable="false"
                android:singleLine="true"
                android:textAlignment="center"
                />


        </LinearLayout>
        <Button
            android:id="@+id/Edit_NU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تعديل الملف الشخصي "
        android:fontFamily="@font/din"
        android:layout_marginHorizontal="15dp"
        android:background="#4CAF50"
        android:textColor="#fff"
        android:layout_marginTop="17dp"


        />
        <Button
            android:id="@+id/MYPARTS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="إستعراض جميع القطع المناسبة لسيارتي"
            android:fontFamily="@font/din"
            android:layout_marginHorizontal="15dp"
            android:background="#FF5722"
            android:textColor="#fff"
            android:layout_marginTop="17dp"


            />
        <Button
            android:id="@+id/logout_NU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تسجيل الخروج  "
            android:fontFamily="@font/din"
            android:layout_marginHorizontal="15dp"
            android:background="#B1992A"
            android:textColor="#fff"
            android:layout_marginTop="17dp"


            />
    </LinearLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:background="#20383535"
      android:padding="5dp"

      >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/newspaper"
          android:fontFamily="@font/din"
          android:text="يمكنك أضافة مواصفات سيارتك ليمنحك كراجك أشعارات بالقطع المتوفرة لدى مراكز القطع المعتمدة حسب نوع سياراتك و أشعارات بالعروض المتوفرة ."
          />

      <TextView
          android:id="@+id/addmycar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/din"
          android:text="إضافة مواصفات سيارتي "
          android:textColor="#880606"
          android:layout_below="@id/newspaper"
          android:layout_alignParentRight="true"
          />
  </RelativeLayout>
</RelativeLayout>