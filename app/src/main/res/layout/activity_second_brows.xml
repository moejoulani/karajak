<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".second_brows"
    android:background="@drawable/benz"
    >

 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">


  <RelativeLayout
      android:id="@+id/topR"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#BE000000"

      android:padding="15dp">

   <TextView
       android:id="@+id/important"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"

       android:layout_centerHorizontal="true"
       android:layout_marginTop="10dp"
       android:fontFamily="@font/din"
       android:text="ميكانيك"
       android:textColor="#ffffff"
       android:textSize="25dp"

       />
  </RelativeLayout>

  <LinearLayout
      android:id="@+id/search_section"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/topR"
      android:layout_marginTop="7dp"
      android:layout_marginBottom="10dp"
      android:orientation="horizontal">

   <ImageView
       android:id="@+id/search_btnbtn"
       android:layout_width="0dp"
       android:layout_height="40dp"
       android:layout_weight="0.5"
       android:src="@drawable/search2"


       />


   <EditText
       android:id="@+id/searchfield"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:background="@drawable/searchbackground"
       android:fontFamily="@font/din"
       android:hint="إبحث هنا ....................."
       android:padding="14dp"
       android:textColorHint="#8AFFFFFF"
       android:textSize="10dp"
       android:textColor="#fff"
       android:layout_weight="2"

       />


  </LinearLayout>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/search_section">

   <TextView
       android:id="@+id/selectno3"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"

       android:layout_marginTop="40dp"
       android:fontFamily="@font/din"
       android:text="اختر القطعة : "
       android:textColor="#ffffff"
       android:textSize="23dp" />

   <Spinner
       android:id="@+id/spinnerforsections"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/selectno3"
       android:layout_marginTop="10dp"
       android:layoutDirection="rtl"
       android:background="#86FFFFFF">


   </Spinner>

   <TextView
       android:id="@+id/selectcar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/spinnerforsections"
       android:layout_marginTop="40dp"
       android:fontFamily="@font/din"
       android:text="حدد نوع السيارة : "
       android:textColor="#F1EBEB"
       android:textSize="23dp" />

   <Spinner
       android:id="@+id/spinnerforcars"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/selectcar"
       android:layout_marginTop="10dp"
       android:layoutDirection="rtl"
       android:background="#86FFFFFF" />

   <TextView
       android:id="@+id/selectSereis"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/spinnerforcars"
       android:layout_marginTop="40dp"
       android:fontFamily="@font/din"
       android:text="  فئة السيارة :"
       android:textColor="#F1EBEB"
       android:textSize="23dp" />

   <Spinner
       android:id="@+id/spinnerforSeries"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layoutDirection="rtl"
       android:layout_below="@id/selectSereis"
       android:layout_marginTop="10dp"
       android:background="#86FFFFFF" />

   <TextView
       android:id="@+id/selectmod"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/spinnerforSeries"
       android:layout_marginTop="10dp"
       android:fontFamily="@font/din"
       android:text="سنة الصنع  : "
       android:textColor="#F1EBEB"
       android:textSize="23dp" />

   <Spinner
       android:id="@+id/spinnerformodel"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/selectmod"
       android:layout_marginTop="10dp"
       android:layoutDirection="rtl"
       android:background="#86FFFFFF" />


   <RelativeLayout
       android:id="@+id/popmarly"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/spinnerformodel"
       android:layout_centerHorizontal="true">

    <Button
        android:id="@+id/search_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="50dp"
        android:fontFamily="@font/din"
        android:padding="20dp"
        android:text="بحث"
        android:textSize="23dp"

        />
   </RelativeLayout>
   </RelativeLayout>
  </RelativeLayout>
 </ScrollView>

</RelativeLayout>