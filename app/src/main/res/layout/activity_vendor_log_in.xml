<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vendor_log_in"
    android:background="#ffff"
    android:id="@+id/root"
    >
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/kar"

        />
    <TextView
        android:id="@+id/logg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_logo"
        android:layout_marginTop="25dp"
        android:text="تسجيل الدخول كتاجر"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="@font/din"
        android:textColor="#000"
        android:textSize="25dp"


        />
    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logg"
        android:layout_marginTop="20dp"

        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="numberDecimal"
        android:hint="رقم الهاتف "
        android:padding="10dp"
        android:background="@drawable/inputsstyle"
        android:textAlignment="center"
        android:fontFamily="@font/din"

        />
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneNumber"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:inputType="textPassword"
        android:hint="كلمة المرور"
        android:fontFamily="@font/din"
        android:textAlignment="center"

        android:padding="10dp"

        android:background="@drawable/inputsstyle"




        />

    <Button
        android:id="@+id/go_log"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="دخول"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@drawable/logbuttonfuck"
        android:textColor="#ffff"
        android:fontFamily="@font/din"

        />

    <Button
        android:id="@+id/bucreate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/go_log"
        android:layout_alignRight="@id/logg"

        android:layout_marginTop="16dp"
        android:layout_marginRight="0dp"
        android:background="@android:color/transparent"
        android:text="إنشاء حساب جديد ؟"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:fontFamily="@font/din"
        android:onClick="newUser"

        />







</RelativeLayout>